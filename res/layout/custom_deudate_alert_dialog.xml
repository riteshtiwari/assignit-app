<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <ListView
        android:id="@+id/repeatListView"
        android:layout_width="fill_parent"
        android:dividerHeight="1dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:entries="@array/repeat_item" >
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:background="@color/grey_color"
        android:layout_below="@+id/repeatListView" >

        <com.assignit.android.ui.views.CustomButton
            android:id="@+id/alert_button_negative"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_deudate"
            android:text="@string/button_cancel"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black_color" />

        <View
            android:layout_width="1dp"
            android:background="@color/grey_color"
            android:layout_height="fill_parent" />

        <com.assignit.android.ui.views.CustomButton
            android:id="@+id/alert_button_positive"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_deudate"
            android:textSize="20sp"
            android:layout_weight="1"
            android:text="@string/button_set"
            android:textColor="@color/black_color" />
    </LinearLayout>

</RelativeLayout>