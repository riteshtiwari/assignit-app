<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="alert_dialog_title_style">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="alert_dialog_message_style">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="alert_dialog_button_style">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="fb_login_button_style">
        <item name="font_type">@string/roboto_light</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="login_note_style">
        <item name="font_type">@string/roboto_light</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="row_friendlist_textview">
        <item name="font_type">@string/roboto_light</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#888888</item>
    </style>
    
    <style name="repeat_deudate_textview">
        <item name="font_type">@string/roboto_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    
    <style name="row_friendlist_textview_footer">
        <item name="font_type">@string/roboto_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#05b5e7</item>
    </style>

    <style name="home_tab_style">
        <item name="font_type">@string/roboto_condensed</item>
        <item name="android:textSize">11sp</item>
    </style>
    
     <style name="friend_tab_pop_style">
        <item name="font_type">@string/roboto_condensed</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black_color</item>
    </style>

    <style name="compostask_description">
        <item name="font_type">@string/roboto_light</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="compostask_check_box">
        <item name="font_type">@string/roboto_light</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="compostask_select_image">
        <item name="font_type">@string/roboto_light</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="compostask_spinner_select">
        <item name="font_type">@string/roboto_light</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="progressbarTextviewMessage">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="row_spinner_textview">
        <item name="font_type">@string/roboto_condensed</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#222222</item>
    </style>

    <style name="PopupItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>